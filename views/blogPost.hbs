
<h1>{{title}}</h1><h2>published: {{date}}</h2>
<p>{{content}}</p>
<form action="/blogPost" method="post">
  <input type="text" name="name"/>
  <textarea type="text" name="body"></textarea>
  <button type="submit">submit</button>
</form>
<h3>Comments</h3>
{{#each comments}}
  <h3>{{name}}</h3>
  <p>{{body}}</p>
{{/each}}
